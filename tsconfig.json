{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
}
